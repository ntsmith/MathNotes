{
  "name": "Jekyll on Ubuntu",
  "build":{
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [4000],
  "postCreateCommand": "bundle config set --local path '.bundle' && bundle install", // user install
  "postStartCommand": "bundle exec jekyll serve --livereload --host 0.0.0.0",
  "runArgs": ["--init"],
  "customizations": {
    "vscode": {
      "extensions": [
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "remoteUser": "ubuntu"
}